<h1>Welcome to the MVC Blog</h1>
{{#each posts}}
<div class="post">
    <h2>{{this.title}}</h2>
    <p>{{this.content}}</p>
    <p>Posted by {{this.user.username}}</p>
    {{#if logged_in}}
    {{#if_eq ../logged_in_user_id this.user.id}}
    <button onclick="location.href='/post/edit/{{this.id}}'" class="edit-post-btn">Edit</button>
    <button class="delete-post-btn" data-id="{{this.id}}">Delete</button>
    {{/if_eq}}
    {{/if}}
</div>
{{/each}}
